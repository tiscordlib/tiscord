{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "removeComments": false,
        "pretty": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "./src",
    },
    "exclude": [
        "./node_modules",
        "./docs",
        "./dist/*"
    ],
    "include": [
        "./src/**/*"
    ],
}
